{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Create Job Request",
  "type": "object",
  "required": ["name", "source", "file_mapping", "queries", "rate_limit"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Job name"
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2048,
      "pattern": "^(https?|sftp)://",
      "description": "URL to the source file containing URLs to crawl"
    },
    "file_mapping": {
      "type": "object",
      "required": ["delimiter", "enclosure", "escape", "url_column"],
      "properties": {
        "delimiter": {
          "type": "string",
          "enum": [",", ";", "|", "\t", "\\t"]
        },
        "enclosure": {
          "type": "string",
          "enum": ["\"", "'", "none"]
        },
        "escape": {
          "type": "string",
          "enum": ["\\", "/", "\"", "'", "none"]
        },
        "url_column": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 100
            },
            {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]+$|^default$"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "queries": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "type": {
            "type": "string",
            "enum": ["xpath", "regex", "jsonpath"]
          },
          "selector": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
          },
          "query": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
          },
          "join": {
            "type": "boolean",
            "default": false
          }
        },
        "oneOf": [
          {"required": ["selector"]},
          {"required": ["query"]}
        ],
        "additionalProperties": false
      }
    },
    "rate_limit": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8,
      "description": "Rate limit for crawling (requests per second)"
    },
    "scheduling": {
      "type": ["object", "null"],
      "properties": {
        "hours": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0,
            "maximum": 24
          }
        },
        "days": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Every Day"]
          }
        },
        "minutes": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0,
            "maximum": 60
          }
        }
      }
    }
  },
  "additionalProperties": false
}
