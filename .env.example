# Snowscrape Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-2
AWS_PROFILE=default  # Optional: AWS CLI profile to use

# ============================================
# DynamoDB Tables
# ============================================
DYNAMODB_JOBS_TABLE=SnowscrapeJobs
DYNAMODB_SESSION_TABLE=SnowscrapeSessions
DYNAMODB_URLS_TABLE=SnowscrapeUrls

# ============================================
# S3 Storage
# ============================================
S3_BUCKET=snowscrape-results

# ============================================
# SQS Queue
# ============================================
SQS_JOB_QUEUE=SnowscrapeJobQueue
SQS_JOB_QUEUE_URL=https://sqs.us-east-2.amazonaws.com/YOUR_ACCOUNT_ID/SnowscrapeJobQueue

# ============================================
# Clerk Authentication
# ============================================
# Get these from https://dashboard.clerk.com
CLERK_JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"
CLERK_JWT_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# ============================================
# Observatory Integration (Optional)
# ============================================
# Snowglobe Observatory for centralized monitoring
# Get API key from Observatory dashboard

SNOWGLOBE_URL=https://snowglobe.alexdiaz.me
SNOWGLOBE_API_KEY=your-observatory-api-key-here
SNOWGLOBE_SITE_ID=snowscrape

# ============================================
# Deployment Configuration
# ============================================
STAGE=dev  # dev or prod

# ============================================
# Alert Configuration (Optional)
# ============================================
# Email for CloudWatch alarm notifications
ALARM_EMAIL_DEV=dev-alerts@example.com
ALARM_EMAIL_PROD=ops-alerts@example.com
